<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Table</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{.title}}</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4"><div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row"><div class="col-sm-12"><table id="example" class="table table-bordered table-hover dataTable" role="grid">
                                    <thead>
                                    <tr role="row">
                                        {{range .cols }}
                                        <th>{{.}}</th>
                                        {{end}}
                                    </tr>
                                    </thead>
                                    <tfoot>
                                    <tr>
                                    {{range .cols }}
                                        <th>{{.}}</th>
                                    {{end}}
                                    </tr>
                                    </tfoot>
                                </table></div></div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script>
    $(function () {
        var table = $('#example').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "scrollX": true,
            "processing": true,
            "serverSide": true,
            "ajax": "/table/" + "{{.title}}" + "/data"
        });

        $('#example').on('click', 'td', function () {
            var cell = table.cell(this);
            var data = cell.data();
            var index = cell.index();
            var row = index.row;
            var col = index.column;

            var tmp = '<div class="input-group">\n' +
                '                            <input type="text" size="16" style="width: 80%"/>\n' +
                '                            <span class="input-group-append">\n' +
                '                                <button type="button" class="btn btn-default"><i class="fa fa-save"></i></button>\n' +
                '                            </span>\n' +
                '                        </div>';

            $(this).html(tmp);
            var input = $(this).find("input");
            input.focus().val(data);

            $(this).on("blur", "div", function () {
                this.replaceWith(data)
            });

            // todo update data

        });

    });



</script>

<!-- DataTables -->
<script src="static/adminlte/plugins/datatables/jquery.dataTables.js"></script>
<script src="static/adminlte/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
